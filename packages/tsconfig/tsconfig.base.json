{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"],
    },
    "outDir": "../../lib",
    "rootDirs": ["../../src/"],
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "typeRoots": ["../../node_modules/@types"],
    "types": []
  },
  "include": [
    "../../src/**/*.ts",
    "../../src/**/*.tsx"
  ],
  "exclude": [
    "../../node_modules",
    "../../lib"
  ]
}